<Window x:Class="ДЗ__56_до_25._01._24_WPF_Привязки__Binding_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ДЗ__56_до_25._01._24_WPF_Привязки__Binding_"
        mc:Ignorable="d"
        Title="Binding mechanism" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <Button Content="Add To List" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" Width="75" Click="AddButton_Click"/>
        <ListBox x:Name="itemsListBox" HorizontalAlignment="Left" Height="100" Margin="10,38,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,143,0,0" TextWrapping="Wrap" Text="{Binding ElementName=inputTextBox, Path=Text.Length}" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,163,0,0" TextWrapping="Wrap" Text="{Binding ElementName=itemsListBox, Path=Items.Count}" VerticalAlignment="Top"/>
    </Grid>
</Window>